<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/actionbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:layout_margin="12dp"
                android:background="@drawable/bg_white_corner_shape"
                android:gravity="left|top"
                android:hint="@string/hint_advice"
                android:padding="12dp"
                android:textSize="@dimen/textsize_h3_16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:text="请留下您的电话或者QQ以便我们及时联系您解决问题"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:background="@color/divider_d3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionbar_high_48dp">

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:inputType="phone"
                    android:paddingLeft="112dp"
                    android:singleLine="true"
                    android:textSize="@dimen/textsize_h3_16sp" />

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="手机号"
                    android:textColor="@color/gray_66"
                    android:textSize="18sp" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:background="@color/divider_d3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionbar_high_48dp">

                <EditText
                    android:id="@+id/et_qq"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:inputType="number"
                    android:paddingLeft="112dp"
                    android:singleLine="true"
                    android:textSize="@dimen/textsize_h3_16sp" />

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Q Q"
                    android:textColor="@color/gray_66"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:background="@color/divider_d3" />

            <Button
                android:id="@+id/btn_commit_advice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>