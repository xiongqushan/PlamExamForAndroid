<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    app:cardCornerRadius="@dimen/card_margin"
    app:cardUseCompatPadding="true">
    <!--app:cardCornerRadius="4dp"-->
    <!--app:cardElevation="5dp"-->
    <!--app:cardMaxElevation="10dp"-->
    <!--app:cardPreventCornerOverlap="true"-->
    <!--app:cardUseCompatPadding="true">-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/userinfo_padding_12dp"
        android:layout_marginRight="@dimen/userinfo_padding_12dp"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/lineCenter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:layout_below="@+id/tvTitle"
            android:layout_marginBottom="8dp"
            android:background="@color/divider_d3"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="阿斯蒂芬"
            android:textColor="@color/gray_28"
            android:textSize="@dimen/textsize_h3_16sp" />

        <TextView
            android:id="@+id/tvResultValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="12"
            android:textColor="#FFFA7981"
            android:textSize="@dimen/textsize_h3_16sp" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineCenter"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/tvUnit"
            android:text="金鳞岂是池中物"
            android:textColor="@color/gray_b2"
            android:textSize="@dimen/textsize_h4" />

        <TextView
            android:id="@+id/tvUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/lineCenter"
            android:text="单位:uml/ml"
            android:textColor="@color/gray_b2"
            android:textSize="@dimen/textsize_h4" />
    </RelativeLayout>


</android.support.v7.widget.CardView>

