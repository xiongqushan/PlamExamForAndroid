<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ListView
        android:id="@+id/listview_report_detail_slide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:divider="@null"
        android:scrollbars="none"
        android:visibility="gone" />

    <View
        android:id="@+id/divider_report_detail"
        android:layout_width="@dimen/divider"
        android:layout_height="match_parent"
        android:background="@color/divider_dd"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.ihaozuo.plamexam.common.pinnedheaderlistview.PinnedHeaderListView
            android:id="@+id/listview_report_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:scrollbars="none"
            android:visibility="visible" />

        <View
            android:id="@+id/layoutPinnedHeader"
            android:layout_width="match_parent"
            android:layout_height="44dp" />

    </FrameLayout>


</LinearLayout>



