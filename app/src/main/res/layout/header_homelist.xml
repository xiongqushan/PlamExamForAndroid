<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--<android.support.v4.view.ViewPager-->
    <com.ihaozuo.plamexam.common.AutoViewPager

        android:id="@+id/BannerPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/divider_12dp" />

    <com.ihaozuo.plamexam.common.RevealLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/btn_report"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/androidColorE"
            android:gravity="center"
            android:text="@string/report"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_h1" />

        <View
            android:layout_width="12dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/btn_consult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/androidColorC"
            android:gravity="center"
            android:text="@string/health_consult"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_h1" />
    </com.ihaozuo.plamexam.common.RevealLayout>

    <include layout="@layout/divider_d3" />

    <RelativeLayout
        android:id="@+id/layout_home_news"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_high_44dp"
        android:background="@drawable/item_press_white_gray"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_news"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/userinfo_padding_12dp"
            android:src="@drawable/ic_news_home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/userinfo_padding_12dp"
            android:layout_toRightOf="@+id/img_news"
            android:text="@string/tab_news"
            android:textColor="@color/gray_28"
            android:textSize="@dimen/textsize_h2" />

        <include layout="@layout/next_set_right_layout" />


    </RelativeLayout>

    <include layout="@layout/divider_d3" />

</LinearLayout>